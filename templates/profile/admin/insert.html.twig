{% extends 'base.html.twig' %}

{% block title %}Ajouter une liste d'utilisateur{% endblock %}

{% block body %}
    {% if error is not null %}
        <div class="alert alert-success">{{ error }}</div>
    {% endif %}
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Ajouter une liste d'utilisateur</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form-group'}}) }}
                        {{ form_widget(form, {'attr': {'class': 'form-control mb-3'}}) }}
                        <button class="btn btn-lg btn-primary" type="submit">Télécharger</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}