{% extends 'base.html.twig' %}

{% block title %}Profil Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center">{{ user.nickname }}</h2>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            {% if user.imageName %}
                                <img src="{{ asset('images/user/' ~ user.imageName) }}" alt="User Image" class="img-fluid rounded-circle" style="max-width: 200px;">
                            {% else %}
                                <img src="{{ asset('images/user/default.JPG') }}" alt="Default Image" class="img-fluid rounded-circle" style="max-width: 200px;">
                            {% endif %}
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Nom :</strong> {{ user.name }}</li>
                            <li class="list-group-item"><strong>Prénom :</strong> {{ user.surname }}</li>
                            <li class="list-group-item"><strong>Téléphone :</strong> {{ user.phoneNumber }}</li>
                            <li class="list-group-item"><strong>Email :</strong> {{ user.email }}</li>
                            <li class="list-group-item"><strong>Campus :</strong> {{ user.campus.name }}</li>
                        </ul>
                        <div class="mt-3">
                            {% if is_granted('ROLE_ADMINISTRATOR') or app.user == user %}
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
                            {% endif %}
                            {% if is_granted('ROLE_ADMINISTRATOR') %}
                                <a href="{{ path('app_user_list') }}" class="btn btn-secondary btn-block">Retour</a>
                            {% else %}
                                <a href="{{ path('app_home') }}" class="btn btn-secondary btn-block">Retour</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}





