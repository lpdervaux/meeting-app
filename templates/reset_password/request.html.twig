{% extends 'singlecard.html.twig' %}

{% block title %}Réinitialiser un mot de passe{% endblock %}

{% block card_header %}
    <h1 class="h2 text-center">Réinitialiser un mot de passe</h1>
{% endblock %}

{% block card_body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(requestForm) }}
        <div class="mb-3">
            <div class="mb-1">
                {{ form_label(requestForm.email) }}
                {{ form_widget(requestForm.email) }}
                {{ form_errors(requestForm.email) }}
            </div>
            <p class="mb-0">
                <small>
                    Entrez votre adresse email pour recevoir un lien de réinitialissation de mot de passe.
                </small>
            </p>
        </div>

        <div class="d-flex justify-content-center">
            <button class="btn btn-primary">Envoyer un lien</button>
        </div>
    {{ form_end(requestForm) }}
{% endblock %}
